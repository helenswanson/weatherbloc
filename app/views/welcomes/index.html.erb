<div class="welcome-page">
  <h1>WeatherBloc</h1>

  <%= form_tag events_path, :method => 'get', class: 'welcome-form' do %>
    <p>
      <%= text_field_tag :search, params[:search], id: 'search_field', placeholder: 'Submit your address', class: 'welcome-form-field' %>
      <%= submit_tag "Search for nearby events", id: 'submit-button', class: 'btn btn-default welcome-form-button' %>
    </p>
  <% end %>
</div>
